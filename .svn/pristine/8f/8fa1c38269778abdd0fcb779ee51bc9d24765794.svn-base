package framework.controller.bean;

import java.util.HashMap;
import java.util.Map;

public class RequestFormBean {
	private Map<String, Object> formCriterion;
	private Map<String, String> typeCriterion;
	private Map<String, Object> queryCriterion;

	public Map<String, Object> getFormCriterion() {
		if(this.formCriterion == null){
			this.formCriterion = new HashMap<String, Object>();
		}
		return formCriterion;
	}
	
	public void setFormCriterion(Map<String, Object> formCriterion) {
		this.formCriterion = formCriterion;
	}
	
	public Map<String, String> getTypeCriterion() {
		if(this.typeCriterion == null){
			this.typeCriterion = new HashMap<String, String>();
		}
		return typeCriterion;
	}
	
	public void setTypeCriterion(Map<String, String> typeCriterion) {
		this.typeCriterion = typeCriterion;
	}
	
	public Map<String, Object> getQueryCriterion() {
		if(this.queryCriterion == null){
			this.queryCriterion = new HashMap<String, Object>();
		}
		return queryCriterion;
	}
	
	public void setQueryCriterion(Map<String, Object> queryCriterion) {
		this.queryCriterion = queryCriterion;
	}
}
