}

tr.alt td{
	background: #f9f9f9;
}
tr.out td{
}
tr.over td{
	background: #c6deff;
}

tr.sel td{
	background: #F9ECAC;
}

/* for global body td */
.tdBodyContent{
 	background: #eeeeee;
 	padding: 0px;
 	border: 1px solid rgb(171, 183, 207);
}
.flexselect{
	padding: 0px;
}
.flexigrid
	{
	position: relative;
	border: 1px solid #888;
	overflow: hidden;
	box-shadow: 14px 10px 56px #aaaaaa;
	margin-bottom: 15px;
	}
.flexigrid div.mDiv
	{
	background: url(../../img/table/wbg.gif) repeat-x top;
	border: 1px solid #ccc;
	border-bottom: 0px;
	border-top: 0px;
	font-weight: bold;
	display: block;
	overflow: hidden;
	white-space: nowrap;
	position: relative;
	}
	
.flexigrid div.tDiv  {
	background: #fafafa url(../../img/table/flex/bg.gif) repeat-x top;
	position: relative;
	border: 1px solid #ccc;
	border-bottom: 0px;
	overflow: hidden;
	height: 30px;
	padding-top: 5px;
    font-size: 12px;
}

.flexigrid div.mDiv div
	{
	padding: 6px;
	white-space: nowrap;
}
.flexigrid div.pDiv
	{
	height: 25px;
	background: url(../../img/table/wbg.gif) repeat-x 0 -1px;
	border: 1px solid #ccc;
	border-top: 0px;
	overflow: hidden;
	white-space: nowrap;
	position: relative;
	}
.flexigrid.ie div.hDiv th div, .flexigrid.ie  div.bDiv td  div/* common inner cell properties*/
	{
	overflow: hidden;
	}
.flexigrid div.sDiv /*toolbar*/
	{
	position: relative;
	border: 1px solid #ccc;
	overflow: hidden;
	display: none;
	}

.flexigrid div.sDiv2
	{
	float: left;
	clear: both;
	padding: 5px;
	padding-left: 5px;
	width: 1024px;
	}
.flexigrid div.sDiv2 input, .flexigrid div.sDiv2 select
	{
	vertical-align: middle;
	}

/**------------------------ For dragging ------------------ */
.ghostTd {
	width:auto;
	height:auto;
	padding:2px 8px;
	border:1px solid #000;
	position:absolute;
/* 	font-size:11px; */
	background:#eee;
}
.dragging {background:fuchsia; color:green;}
.hovering {background:orange; color:lime;}

input[type=checkbox], input[type=radio] {
	position: relative;
	opacity : 100;
	left : 0;	
}