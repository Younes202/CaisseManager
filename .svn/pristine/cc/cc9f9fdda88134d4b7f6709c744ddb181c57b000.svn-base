.sortable {
	margin:0;
	padding:0;
	outline:none;
	border-left:1px solid #c6d5e1;
	border-bottom:none;
	margin:0 auto 0px;
	border-bottom: 0px;
	margin-bottom: 0px;
/* 	font-size:11px; */
	table-layout:fixed;
    border-collapse: collapse;/* Pour les trois points*/
	}
.sortable th h3 {
	margin:0;
	outline:none;
	font-size:12px;
	padding:0px 8px 2px;
	}
	
.sortable tr { 
	height: 25px;
}
.sortable tr div[wact]{ 
    font-size: 4px;
    padding: 2px 6px 4px 8px !important;
    line-height: 1.39;
}

.sortable td {
	margin:0;
	padding:0;
	outline:none;
	padding:0px 2px 0px;
	border-bottom:1px solid #c6d5e1;
	border-right:1px solid #c6d5e1;

	text-overflow:ellipsis;
    overflow:hidden;
    white-space:nowrap; /*Pour les trois points*/
	}
.sortable .head h3 {
	margin:0;
	padding:0;
	outline:none;
	background:url("../../img/table/sort.gif") 7px center no-repeat;
	cursor:pointer;
	padding-left:18px
	}
.sortable .desc, .sortable .asc {
	/*background:url(../../img/table/flex/wbg.gif) repeat-x 0 -1px;
	border: 1px solid #ccc;*/
	color:red;
	}
.sortable th {
	text-align:left;
	background:url(../../img/table/flex/fhbg.gif);
	border-top: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
	/*Couper le text s'il depasse*/
	text-overflow:ellipsis;
    overflow:hidden;
    white-space:nowrap;
	
	}
.sortable .desc h3 {
	margin:0;
	padding:0;
	outline:none;
	background:url(../../img/table/flex/uup.png) 7px  center no-repeat;
	cursor:pointer;
	padding-left:18px
	}
.sortable .asc h3 {
	margin:0;
	padding:0;
	outline:none;
	background:url(../../img/table/flex/ddn.png) 7px  center no-repeat;
	cursor:pointer;
	padding-left:18px
	}
.sortable .head:hover, .sortable .desc:hover, .sortable .asc:hover {
	outline:none;
	color:orange;
	/*border-bottom: 1px solid orange;*/
	}

.noBorder td{
	border-left: 0px;
	border-right: 0px;
	border-top:0px;
	padding:2px 0px 2px 0px;
	text-align:center;
}

.sortable td.evenselected {
	background:#ecf2f6
	}
.sortable td.oddselected {
	background:#dce6ee
	}
